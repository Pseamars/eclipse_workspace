import stanford.karel.*;

public class StoneMasonKarel extends SuperKarel {
	public void run(){
		turnLeft();
		fixColumn();
		while(frontIsClear()){
			findColumn();
			fixColumn();
		}
		
	}
	
	
	private void checkBeepers(){
		if(beepersPresent()){
			move(); 
		}else{
			putBeeper();
			move();
		}
	}
	
	
	private void fixColumn(){
		while(frontIsClear()){
			checkBeepers();
		}	
		turnAround();
		checkBeepers();
		goToWall();
		turnLeft();
	}
	
	private void findColumn(){
		for(int i=0; i<4; i++){
			move();
		}
		turnLeft();
	}
	
	private void goToWall(){
		while(frontIsClear()){
			move();
		}
	}

}
